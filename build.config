# Основные параметры
CONFIG_VENDOR=TPLINK
CONFIG_PRODUCT=MT7628
CONFIG_FIRMWARE_PRODUCT_ID="TL_WR840N-V6"

# WiFi драйвер
CONFIG_FIRMWARE_WIFI2_DRIVER=4.0

# IPv6 (опционально, но может быть нужен)
CONFIG_FIRMWARE_ENABLE_IPV6=y

# Включение AmneziaWG
CONFIG_FIRMWARE_INCLUDE_AMNEZIAWG=y

# Криптография
CONFIG_FIRMWARE_INCLUDE_OPENSSL_EC=y

# Ядро
CONFIG_MODULES=y
CONFIG_NET_UDP_TUNNEL=y
CONFIG_CRYPTO_CHACHA20=y
CONFIG_CRYPTO_POLY1305=y
CONFIG_CRYPTO_AEAD=y

# Сетевые правила
CONFIG_NETFILTER_XT_TARGET_REDIRECT=y
CONFIG_NETFILTER_XT_TARGET_MASQUERADE=y
CONFIG_IP_NF_TARGET_MASQUERADE=y

# Полезные утилиты
CONFIG_FIRMWARE_INCLUDE_IPROUTE2=y
CONFIG_FIRMWARE_INCLUDE_IPTABLES=y
CONFIG_FIRMWARE_INCLUDE_DROPBEAR=y
CONFIG_FIRMWARE_INCLUDE_ZRAM=y
CONFIG_FIRMWARE_INCLUDE_LANG_RU=y

# Оптимизация размера (если нужно уместиться в 4 MiB)
CONFIG_CC_OPTIMIZE_FOR_SIZE=y
